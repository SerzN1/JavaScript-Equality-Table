{
  "name": "javascript-equality-table",
  "description": "JavaScript equality comparison is a crazy thing, sometimes. When in doubt, use three equals signs.",
  "version": "1.0.0",
  "main": "values.js",
  "scripts": {
    "test": "npm test",
    "start": "tsc -w",
    "local": "npx serve ./src",
    "build": "npm run build:clean && npm run build:copy && npm run build:es",
    "build:clean": "rm -rf docs",
    "build:es": "esbuild ./src/index.ts --bundle --minify --sourcemap --outfile=./docs/bundle.js",
    "build:copy": "mkdir docs && cp ./src/index.html ./src/setup.js ./src/styles.css ./src/images/* ./src/favicon.ico ./src/manifest.json docs",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SerzN1/JavaScript-Equality-Table.git"
  },
  "keywords": [
    "js",
    "equality",
    "comparison",
    "table",
    "identity",
    "operator"
  ],
  "author": "serzn1",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SerzN1/JavaScript-Equality-Table/issues"
  },
  "homepage": "https://github.com/SerzN1/JavaScript-Equality-Table#readme",
  "dependencies": {
    "husky": "^6.0.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "esbuild": "^0.12.8"
  }
}
